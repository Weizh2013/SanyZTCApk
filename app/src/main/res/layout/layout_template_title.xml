<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:background="@color/dodgerblue"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/left_top_setting_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="1.0dip"

        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:visibility="gone">
        <ImageView
            android:id="@+id/left_top_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1.0dip"
             android:visibility="visible"/>
        <TextView android:id="@+id/left_titletop"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/white"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_marginRight="1.0dip"/>
    </FrameLayout>

    <TextView
        android:id="@+id/module_title"
        android:textSize="@dimen/txsize_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
    />

    <FrameLayout
        android:id="@+id/right_top_setting_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="1.0dip"

        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:visibility="visible">

        <ImageView
            android:id="@+id/right_top_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1.0dip"


            android:visibility="gone"/>
        <TextView android:id="@+id/right_titletop"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_marginRight="1.0dip"/>
    </FrameLayout>

</RelativeLayout>