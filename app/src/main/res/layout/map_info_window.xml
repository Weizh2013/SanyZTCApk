<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="240dip"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_infowindow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:text="湘A878520"
            android:textColor="#FF4C90F9"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_closewindow"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/navigation_close_hl" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:src="@drawable/divider" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="165.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/window_devinfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="速        度:" />

                <TextView
                    android:id="@+id/tv_infowindow_speed"
                    style="@style/window_devinfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5.0dip"
                    android:singleLine="true"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/window_devinfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="载重状态:" />

                <TextView
                    android:id="@+id/tv_infowindow_loadState"
                    style="@style/window_devinfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5.0dip"
                    android:singleLine="true"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/window_devinfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="篷布状态:" />

                <TextView
                    android:id="@+id/tv_infowindow_tarpaulinState"
                    style="@style/window_devinfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5.0dip"
                    android:singleLine="true"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/window_devinfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="举升状态:" />

                <TextView
                    android:id="@+id/tv_infowindow_riseState"
                    style="@style/window_devinfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5.0dip"
                    android:singleLine="true"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:orientation="horizontal" >


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:src="@drawable/divider" />
    <RelativeLayout
        android:layout_width="230dip"
        android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.0dip"
        android:orientation="horizontal" >
        <TextView
            style="@style/window_devinfo"
            android:layout_width="wrap_content"

            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:text="报警内容:" />

        <TextView
            android:id="@+id/tv_infowindow_alarm"
            style="@style/window_devinfo"
            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5.0dip"


            android:textColor="@color/red"
            android:text="" />

        </LinearLayout>
    </RelativeLayout>


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:src="@drawable/divider" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.0dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/window_devinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text="定位时间:" />

        <TextView
            android:id="@+id/tv_infowindow_gpstime"
            style="@style/window_devinfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5.0dip"
            android:singleLine="true"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_infowindow_address"
        style="@style/window_devinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3.0dip"
        android:lines="2"      
        android:text="加载中--" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:src="@drawable/divider" />
    <LinearLayout
        android:id="@+id/historytrack"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.0dip"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="horizontal" >
        <TextView

            style="@style/window_devinfo"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3.0dip"
            android:lines="1"
            android:gravity="center"
            android:background="@drawable/shape"
            android:text="历史轨迹" />

        </LinearLayout>


</LinearLayout>